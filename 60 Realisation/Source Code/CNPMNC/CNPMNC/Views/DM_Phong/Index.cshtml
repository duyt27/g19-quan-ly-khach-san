<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh mục phòng</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div>
                    <a type="button" class="btn btn-primary" href="@Url.Action("Create", "DM_Phong", new { area = ""})" style="margin-bottom: 5px;">Thêm mới</a>
                </div>
                <div>
                    <a type="button" class="btn btn-primary" href="@Url.Action("Index", "Phongs", new { area = ""})" style="margin-bottom: 5px; margin-left: 5px;">Danh sách phòng</a>
                </div>
            </div>
            
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenLoaiPhong)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DonGia)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenLoaiPhong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DonGia)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.LoaiPhongID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.LoaiPhongID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
   
</div>

